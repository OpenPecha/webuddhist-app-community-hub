name: Add Feedback to Project

on:
  issues:
    types: [opened]
  # Uncomment the lines below if you also want to track 'Discussions' as feedback
  # discussions:
  #   types: [created]

jobs:
  add-to-project:
    name: Add Issue to Project
    runs-on: ubuntu-latest
    steps:
      - name: Add to Project
        uses: actions/add-to-project@v0.6.0
        with:
          # The URL of the project to add the item to
          project-url: https://github.com/orgs/OpenPecha/projects/116
          
          # IMPORTANT: You must create a secret named ADD_TO_PROJECT_PAT
          # The default GITHUB_TOKEN often cannot write to Org-level projects
          github-token: ${{ secrets.ADD_TO_PROJECT_PAT }}
